
@model Trainingtask.Models.Entity.Department
@{
    ViewData["Title"] = "Department Save";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="DepartmentSave" asp-controller="Home" method="post">
    <input asp-for="Id" type="hidden" />
    <div class="form-group">
        <label asp-for="Name">Department Name</label>
        <input asp-for="Name" class="form-control" type="text" required />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
