@model Employee
@{
    ViewData["Title"] = "Employee Save";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="EmployeeSave" method="post">
    <input asp-for="Id" type="hidden" />
    <div class="form-group">
        <label asp-for="Name">Employee Name</label>
        <input asp-for="Name" class="form-control" type="text" required />
    </div>
    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input asp-for="Address" class="form-control" type="text" required />
    </div>
    <div class="form-group">
        <label asp-for="Phone">Phone</label>
        <input asp-for="Phone" class="form-control" type="text" required />
    </div>
    <div class="form-group">
        <label asp-for="City">City</label>
        <input asp-for="City" class="form-control" type="text" required />
    </div>
    <div class="form-group">
        <label asp-for="DeptId">Department</label>
        <select asp-for="DeptId" asp-items="@(new SelectList(ViewBag.Departments, "Id", "Name"))" class="form-control" required>
            <option value="">Select a Department</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="DesigId">Designation</label>
        <select asp-for="DesigId" asp-items="@(new SelectList(ViewBag.Designations, "Id", "Name"))" class="form-control" required>
            <option value="">Select a Designation</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
